{
    "name": "constanze-standard/cookies",
    "type": "library",
    "description": "The PSR-15 middleware for cookies",
    "keywords": ["cookie", "middleware", "cookies", "psr", "psr-15"],
    "license": "Apache-2.0",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^7.1.3",
        "php-http/message": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "nyholm/psr7-server": "^0.3.0",
        "nyholm/psr7": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "ConstanzeStandard\\Cookies\\": "src"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t ./",
        "cc-start": "php -S 0.0.0.0:8888 -t ./tests/codeCoverage/",
        "test": "phpunit --coverage-html ./tests/codeCoverage tests"
    }
}
